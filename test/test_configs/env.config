[env]
time_limit = 20
time_step = 0.2
val_size = 100
test_size = 500
randomize_attributes = false


[reward]
success_reward = 1
collision_penalty = -0.25
discomfort_dist = 0.2
discomfort_penalty_factor = 0.5
stationary_penalty = -0.3
stationary_penalty_dist = 0.2

agent_timestep = 0.4
human_timestep = 0.6
reward_increment = 4.0
position_variance = 4.0
direction_variance = 3.0


[sim]

# policy configurations for robot

[rl]
gamma = 0.9


[om]
cell_num = 4
cell_size = 1
om_channel_size = 3


[action_space]
kinematics = unicycle
# action space size is speed_samples * rotation_samples + 1
speed_samples = 5
rotation_samples = 16
sampling = exponential
query_env = true


[cadrl]
mlp_dims = 150, 100, 100, 1
multiagent_training = false


[lstm_rl]
global_state_dim = 50
mlp1_dims = 150, 100, 100, 50
mlp2_dims = 150, 100, 100, 1
multiagent_training = true
with_om = false
with_interaction_module = false


[srl]
mlp1_dims = 150, 100, 100, 50
mlp2_dims = 150, 100, 100, 1
multiagent_training = true
with_om = false

[sarl]
mlp1_dims = 150, 100
mlp2_dims = 100, 50
attention_dims = 100, 100, 1
mlp3_dims = 150, 100, 100, 1
multiagent_training = true
with_om = true
with_global_state = true

[gatcarl]
global_state_dim = 50
nfeat = 13
nhid = 20
nclass = 50
dropout = 0.8
alpha = 1.0
nheads = 4
mlp3_dims = 150, 100, 100, 1
multiagent_training = true
nbatchsize = 100

[comcarl]
in_mlp_dims = 100, 50
sort_mlp_dims = 100, 50
sort_attention_dims = 100, 100, 1
<!-- attention_dims = 50, 50, 1 -->
action_dims = 150, 100, 100, 1
global_state_dim = 50
dropout = 0.5
alpha = 1.0
nheads = 7
multiagent_training = true
with_om = false
with_global_state = true
